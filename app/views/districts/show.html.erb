<%= link_to 'Добавить СВТ', new_computer_path(:district_id => @district_id), :class => "btn" %>
<%= link_to 'Добавить другое оборудование', new_device_path(:district_id => @district_id), :class => "btn" %>
<%= link_to 'Добавить ПУ', new_printer_path(:district_id => @district_id), :class => "btn" %>
<%= link_to 'Добавить Модем', new_modem_path(:district_id => @district_id) , :class => "btn"%>   
<br></br>
<%= link_to 'Редактировать', edit_district_path(@district, :region_id => @district.region_id) %>|
